{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler", // atau "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Penting: Vite menangani emisi file, tsc di sini untuk type checking
    "jsx": "react-jsx",
    "types": ["vite/client"] // Menambahkan tipe Vite client
  },
  "include": ["src"], // Folder yang akan di-check oleh TypeScript
  "references": [{ "path": "./tsconfig.node.json" }]
}